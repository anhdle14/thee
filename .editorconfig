root = true

[*]
end_of_line = lf
indent_style = space
indent_size = 2
charset = utf-8
max_line_length = 80
trim_trailing_whitespace = true
insert_final_newline = true

[Makefile]
indent_style = tab
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = true

[COMMIT_EDITMSG]
max_line_length = 0
